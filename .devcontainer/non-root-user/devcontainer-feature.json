{
    "id": "non-root-user",
    "version": "1.0.0",
    "name": "Create a Non-Root User",
    "documentationURL": "",
    "description": "Sets up a non-root user.",
    "options": {
        "username": {
            "type": "string",
            "proposals": [
                "devcontainer",
                "vscode",
                "codespace",
                "none",
                "automatic"
            ],
            "default": "automatic",
            "description": "Enter name of a non-root user to configure or none to skip"
        },
        "userUid": {
            "type": "string",
            "proposals": [
                "1000",
                "automatic"
            ],
            "default": "automatic",
            "description": "Enter UID for non-root user"
        },
        "userGid": {
            "type": "string",
            "proposals": [
                "1000",
                "automatic"
            ],
            "default": "automatic",
            "description": "Enter GID for non-root user"
        }
    }
}